@import "./mixins.styl"

*
	margin 0
	padding 0




.items-wrap
	margin-bottom 30px
	height 400px
	display grid
	grid-gap 10px
	grid-template-columns: repeat(4, 1fr)
	//grid-template-rows: repeat(4, 20px)
	.items, .wow
		border 1px solid grey
		text-align center
		
	.item1
		background-color grey
		
	.item1
		color red
		grid-column 1/4
	.item2
		grid-column: 1/3
		grid-row: 2/4
		color red
	.item5
		grid-column: 3/4
		grid-row: 3/7
		color red	


.section
	height 100vh




	.my_slider
		position relative
	
.top
	height 100vh
	background url('../img/electric.jpg') no-repeat center center //fixed
	background-size cover
.top1
	height 100vh
	background url('../img/1.jpg') no-repeat center center //fixed
	background-size cover
.top2
	height 100vh
	background url('../img/2.jpg') no-repeat center center //fixed
	background-size cover
.top3
	height 100vh
	background url('../img/3.jpg') no-repeat center center //fixed
	background-size cover
.top4
	height 100vh
	background url('../img/4.jpg') no-repeat center center //fixed
	background-size cover
	margin: 0 auto
.arrows
	position absolute
	z-index 1
	top 40%
	right 10%

.arr_prev, .arr_next
	display flex
	justify-content center
	align-items center
	background-color #FFFFFF
	width 50px
	height 50px
	text-align center
	font-size 25px
	font-weight bold
	cursor pointer
			
.arr_next
	margin-bottom 5px

.slick-dots
	position absolute
	bottom 5%
	li
		font-size 25px
		background-color #000000
		border-radius 50%
		border 2px solid #fff
	.slick-active
		background-color #fff
		
.down
	position: absolute
	right 104px
	bottom 65px
	border-radius 50%
	z-index 2
	height 120px
	width 120px
	cursor pointer
	animation-iteration-count: infinite

.boxes-wrap
	width 99%
	display grid
	grid-gap 10px
	grid-template-columns: repeat(2, 1fr)
	justify-content space-aruond
.boxes
	height 150px	
	border 1px solid grey
	text-align center
	background-color #999

.fp-bg
	background-image: url('../img/electric.jpg')
  background-size: cover
  background-position: center 80%



.foo
	display flex
	background-color #365B72
	height 200px
	width 100%
	margin-top 30px

.mixes
	color red
	border 1px solid black
	size(600,50)





